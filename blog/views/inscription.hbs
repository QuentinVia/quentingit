            <div class="form-group mb-3">
                <label for="exampleInputPassword1">Confirmation de mot de passe:</label>
                <input name="confirmPassword" type="password" class="form-control" id="exampleInputPassword2" placeholder="Confirmation de mot de passe">
            </div>
